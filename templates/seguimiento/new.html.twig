{% extends 'layout.html.twig' %}

{% block content %}

    <div class="row breadcrumb-wrapper justify-content-between">
        <div class="col-6">
            <h1>Seguimiento</h1>
        </div>
    </div>


    <div class="card card-default">
        <div class="card-header card-header-border-bottom">
            <h2>Formulario de seguimientos</h2>

        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12">

                {{ form_start(form,{ 'attr': {'class': 'form-horizontal', 'id': 'form', 'enctype': 'multipart/form-data', 'novalidate': 'novalidate'}}) }}

                    <input type="hidden" name="evaluacion" value="{{ evaluacion.id }}">

                    <div class="form-group">
                            <label>Fecha*</label>
                            {{ form_widget(form.fecha, { 'attr': {'class': 'form-control datetimepicker', 'autocomplete': 'off', 'required': 'required'} }) }}
                            <span class="error"></span>
                    </div>
                    <div class="form-group">
                        <label>Descripci√≥n*</label>
                        {{ form_widget(form.descripcion, { 'attr': {'class': 'form-control', 'autocomplete': 'off', 'required': 'required', 'rows': '3',} }) }}
                        <span class="error"></span>
                    </div>

                    <div class="form-footer pt-4 mt-5 border-top">
                        <button type="submit" class="btn btn-primary btn-default">Guardar</button>
                        <a class="btn btn-secondary btn-default" href="{{ path('solicitud_show',{'id': evaluacion.solicitud.id}) }}">Cancel</a>
                    </div>
                {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}

    {{ parent() }}
    <script>

    select_menu('configuracion_menu');

    </script>

{% endblock %}


