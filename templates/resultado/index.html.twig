            var route = Routing.generate('resultado_dataTable');
            var dataTable = createDataTable(Nosortcol, route);

            /* Funcionalidad para el comportamiento de la confirmaci√≥n para eliminar elemento */
            $("#dataTable tbody").on("click", ".eliminar", function() {
              var id = $(this).attr("id");
              var token = $(this).attr("token");
              var rutaEliminar = Routing.generate("resultado_delete", { id: id });
