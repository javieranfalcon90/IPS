{% extends 'layout.html.twig' %}

{% block content %}

    <div class="row breadcrumb-wrapper justify-content-between">
        <div class="col-6">
            <h1>Asignación</h1>
        </div>
    </div>


    <div class="card card-default">
        <div class="card-header card-header-border-bottom">
            <h2>Formulario de asignaciones</h2>

        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12">

                {{ form_start(form,{ 'attr': {'class': 'form-horizontal', 'id': 'form', 'enctype': 'multipart/form-data', 'novalidate': 'novalidate'}}) }}

                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label>Trámite*</label>
                                {{ form_widget(form.tramite, { 'attr': {'class': 'form-control', 'autocomplete': 'off', 'required': 'required'} }) }}
                                <span class="error"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label>Fecha*</label>
                                {{ form_widget(form.fecha, { 'attr': {'class': 'form-control datetimepicker', 'autocomplete': 'off', 'required': 'required'} }) }}
                                <span class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Producto*</label>
                        {{ form_widget(form.producto, { 'attr': {'class': 'form-control select2', 'required': 'required'} }) }}
                        <span class="error"></span>
                    </div>
                    <div class="form-group">
                        <label>Evaluador*</label>
                        {{ form_widget(form.evaluador, { 'attr': {'class': 'form-control select2', 'required': 'required'} }) }}
                        <span class="error"></span>
                    </div>

                    <br>

                    <div class="form-group row">
                        <div class="col-1">
                            <label for="checkbox">Notificación</label>
                        </div>
                        <div class="col-11">
                            <label class="control outlined control-checkbox checkbox-primary">Notificar vía correo al evaluador asignado
                            <input name="notificar" type="checkbox" {{ notificacion ? 'checked="checked"' : '' }}>
                            <div class="control-indicator"></div>
                        </label>
                        </div>
                    </div>

                    <div class="form-footer pt-4 mt-5 border-top">
                        <button type="submit" class="btn btn-primary btn-default">Guardar</button>
                        <a class="btn btn-secondary btn-default" href="{{ path('asignacion_index') }}">Cancel</a>
                    </div>
                {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}

    {{ parent() }}
    <script>

    select_menu('asignacion_menu');

    </script>

{% endblock %}



